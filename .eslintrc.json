{
    "extends": "airbnb-base",
    "rules": {
        "comma-dangle": [
            1,
            "always-multiline"
        ],
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "no-prototype-builtins": 1,
        "no-await-in-loop": 1,
        "no-loop-func": 1,
        "no-nested-ternary": 1,
        "linebreak-style": 1,
        "func-names": 1,
        "no-param-reassign": 0,
        "space-before-function-paren": 1,
        "space-before-blocks": 1,
        "camelcase": 1,
        "semi": 1,
        "max-len": [
            0
        ],
        "no-else-return": 1,
        "no-underscore-dangle": [
            "off"
        ],
        "guard-for-in": 1,
        "no-restricted-syntax": 1,
        "no-shadow": 1,
        "no-console": 0,
        "consistent-return": 0,
        "spaced-comment": 1,
        "padded-blocks": 1,
        "indent": [
            "error",
            2,
            {
                "MemberExpression": 1
            }
        ]
    },
    "overrides" : [
        {
          "files": ["*.yaml", "*.yml"],
          "plugins": ["yaml"],
          "extends": ["plugin:yaml/recommended"]
        }
    ]
}